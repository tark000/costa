<%= form_tag adverts_path, :method => 'get' do %>
    <fieldset>
      <legend>Поиск</legend>




      <div class="row">


          <div class="row">
            <div class="small-6 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Жилая недвижимость:</label>
            </div>
            <div class="small-6 columns">

              <%=  radio_button_tag 'living', '1' %> Жилая <br />
              <%=  radio_button_tag 'living', '0' %>  Нежилая

            </div>
          </div>




          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Тип сделки:</label>
            </div>
            <div class="small-8 columns">

              <%= select_tag(:operation_type, options_for_select(operation), include_blank: true) %>
            </div>
          </div>




          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Категория:</label>
            </div>
            <div class="small-8 columns">

              <%= select_tag(:category, options_for_select(category), include_blank: true) %>
            </div>
          </div>



          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Состояние:</label>
            </div>
            <div class="small-8 columns">
              <%=  check_box_tag 'state' %>

            </div>
          </div>




          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Стоимость:</label>
            </div>
            <div class="small-4 columns">
              <%= text_field_tag :min_price, params[:min_price], :placeholder=>"min" %>
            </div>
            <div class="small-4 columns">
              <%= text_field_tag :max_price, params[:max_price], :placeholder=>"max" %>
            </div>
          </div>



          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Площадь:</label>
            </div>
            <div class="small-4 columns">
              <%= text_field_tag :min_area, params[:min_area], :placeholder=>"min" %>
            </div>
            <div class="small-4 columns">
              <%= text_field_tag :max_area, params[:max_area], :placeholder=>"man" %>
            </div>
          </div>



          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Состояние:</label>
            </div>
            <div class="small-8 columns">

              <%=  radio_button_tag 'gender', 'all', true %> за все <br />
              <%=  radio_button_tag 'gender', 'm2' %>  за м2
            </div>
          </div>




          <div class="row">
            <div class="small-4 columns">
              <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Регион:</label>
            </div>
            <div class="small-8 columns">

              <%= select_tag(:region, options_for_select(region), include_blank: true) %>
            </div>
          </div>

        <div class="row">
          <div class="small-4 columns">
            <label for="right-label" class="right inline" style="margin: 0 0 0 0; padding: 0;">Город:</label>
          </div>
          <div class="small-8 columns">

            <%= select_tag(:city, options_for_select(city), include_blank: true) %>
          </div>
        </div>



        <div class="row">

          <div class="small-8 columns">

            <%= submit_tag "Search", :id => nil %></div>
          </div>
        </div>


    </fieldset>
<% end %>